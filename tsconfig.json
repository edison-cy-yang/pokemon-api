{
  "compilerOptions": {
    "target": "ES6",                   
    "module": "commonjs",    
    "baseUrl": "./src",          
    "rootDir": "./src",                
    "outDir": "./dist",                
    "strict": true,                    
    "esModuleInterop": true,           
    "skipLibCheck": true,              
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
  }
}